{
  "name": "Ad Skipper",
  "description": "Mute and skip ads.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/hi-128.png"
  },

  "icons": {
    "16": "images/hi-16.png",
    "32": "images/hi-32.png",
    "48": "images/hi-48.png",
    "128": "images/hi-128.png"
  },

  "content_scripts": [
    {
      "js": ["scripts/youTubeScript.js"],
      "matches": [
        "https://www.youtube.com/*",
        "http://127.0.0.1:5500/test.html"
      ]
    }
  ]
}
